{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    // Lit
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}